<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allStudentsFragment">

    <fragment
        android:id="@+id/allStudentsFragment"
        android:name="com.fadhil.challenge.view.ui.StudentListFragment"
        android:label="Student Data Management"
        tools:layout="@layout/fragment_student_list">
        <action
            android:id="@+id/action_allStudentsFragment_to_addStudentFragment"
            app:destination="@id/addStudentFragment" />
        <action
            android:id="@+id/action_allStudentsFragment_to_studentDetailFragment"
            app:destination="@id/studentDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.fadhil.challenge.view.ui.StudentInsertionFragment"
        android:label="Insert new student"
        tools:layout="@layout/fragment_student_insertion" >
        <action
            android:id="@+id/action_addStudentFragment_to_allStudentsFragment"
            app:destination="@id/allStudentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/studentDetailFragment"
        android:name="com.fadhil.challenge.view.ui.StudentDetailFragment"
        android:label="Student detail"
        tools:layout="@layout/fragment_student_detail" >
        <action
            android:id="@+id/action_studentDetailFragment_to_allStudentsFragment"
            app:destination="@id/allStudentsFragment" />
    </fragment>
</navigation>