<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/btnCalculatorCTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCalculatorCTA"
        app:layout_constraintBottom_toTopOf="@+id/btnCameraCTA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnCameraCTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnCameraCTA"
        app:layout_constraintBottom_toTopOf="@+id/btnMyViewAppCTA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalculatorCTA" />

    <Button
        android:id="@+id/btnMyViewAppCTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnMyViewAppCTA"
        app:layout_constraintBottom_toBottomOf="@+id/btnHeroesCTA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCameraCTA" />

    <Button
        android:id="@+id/btnHeroesCTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnHeroesAppCTA"
        app:layout_constraintBottom_toBottomOf="@+id/btnMoviesCTA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMyViewAppCTA" />

    <Button
        android:id="@+id/btnMoviesCTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnMoviesCTA"
        app:layout_constraintBottom_toBottomOf="@+id/btnStudentCTA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHeroesCTA" />

    <Button
        android:id="@+id/btnStudentCTA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnStudentCTA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMoviesCTA" />

</androidx.constraintlayout.widget.ConstraintLayout>